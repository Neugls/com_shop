		        <option value="0">COM_SHOP_BOOLEAN_FALSE</option>
		        <option value="1">COM_SHOP_BOOLEAN_TRUE</option>
		    </field>
		</fieldset>
		<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL">
			<field name="rules" type="rules" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC" class="inputbox" validate="rules" filter="rules" component="com_shop" section="component" />
		</fieldset>
	</fields>
</config>
