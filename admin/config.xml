		    <field name="business" type="text" required="true" label="COM_SHOP_PAYPAL_ID_LABEL" description="COM_SHOP_PAYPAL_ID_DESC" />
		    <field name="sandbox" type="radio" default="0" class="radio btn-group" filter="uint" label="COM_SHOP_PAYPAL_SANDBOX_LABEL" description="COM_SHOP_PAYPAL_SANDBOX_DESC">
		        <option value="0">COM_SHOP_BOOLEAN_FALSE</option>
		        <option value="1">COM_SHOP_BOOLEAN_TRUE</option>
		    </field>
		    <field name="img_width" type="text" required="true" default="450" filter="uint" label="COM_SHOP_IMG_WIDTH_LABEL" description="COM_SHOP_IMG_WIDTH_DESC" />
		    <field name="img_height" type="text" required="true" default="600" filter="uint" label="COM_SHOP_IMG_HEIGHT_LABEL" description="COM_SHOP_IMG_HEIGHT_DESC" />
